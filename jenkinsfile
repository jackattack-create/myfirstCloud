pipeline {
    agent {
        docker {
            image 'jackattack123/dockerprac'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    environment {
        
        DOCKER_HUB_CREDENTIALS_ID = '7'
        DOCKER_HUB_REPO = 'jackattack123/dockerprac'
    }

    stages {
        stage('Checkout') {
            steps {
                
                git branch: 'main', url: 'https://github.com/jackattack-create/myfirstCloud.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
    
                    def gitCommitHash = sh(returnStdout: true, script: 'git rev-parse HEAD').trim()
                    def image = docker.build("${DOCKER_HUB_REPO}:${gitCommitHash}")

               
                    docker.withRegistry('https://registry.hub.docker.com', DOCKER_HUB_CREDENTIALS_ID) {

                        image.push()

                        image.push('latest')
                    }
                }
            }
        }
    }
}
