pipeline {
    agent {
        // docker {
        //     image 'jackattack123/dockerprac:latest'
        //     args '-v /var/run/docker.sock:/var/run/docker.sock'
        // }
        dockerfile {
            filename 'docker/Dockerfile'
            dir '.'
            additionalBuildArgs '--build-arg http_proxy=http://proxy.iiit.ac.in:8080 --build-arg https_proxy=http://proxy.iiit.ac.in:8080'
        }
    }

    environment {       
        DOCKER_HUB_CREDENTIALS_ID = '7'
        DOCKER_HUB_REPO = 'jackattack123/dockerprac'
        IMAGE_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                
                git branch: 'main', url: 'https://github.com/jackattack-create/myfirstCloud.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
    
                    
                    def image = docker.build("${DOCKER_HUB_REPO}:${IMAGE_TAG}", "-f docker/Dockerfile .")

                    image.inside {
                        sh 'docker images'
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', DOCKER_HUB_CREDENTIALS_ID) {
                        docker.image("${DOCKER_HUB_REPO}:${IMAGE_TAG}").push()
                    }
                }
            }
        }
    }
}
